{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["assets/*"],
    }
  },
  "extends": "@react-native/typescript-config/tsconfig.json"
}
